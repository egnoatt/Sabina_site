{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start: Frontend",
      "type": "shell",
      "command": "npm run dev",
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "problemMatcher": [],
      "isBackground": true
    },
    {
      "label": "Start: Backend",
      "type": "shell",
      "command": "uvicorn app.main:app --reload --host 0.0.0.0 --port 8000",
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "problemMatcher": [],
      "isBackground": true
    },
    {
      "label": "Start: Both (compound)",
      "dependsOn": [
        "Start: Frontend",
        "Start: Backend"
      ],
      "dependsOrder": "parallel"
    }
  ]
}